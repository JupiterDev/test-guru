<%= form_with model: [:admin, @badge], local: true do |form| %>

	<%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title, "Название" %><br>
    <%= form.text_field :title, id: :badge_title %>
  </p>

	<p>
    <%= form.label :pic_url, "Изображение (ссылка)" %><br>
    <%= form.text_field :pic_url, id: :badge_pic_url %>
  </p>

  <p>
    <%= form.label :rule, "Правило" %><br>
    <%= form.select(:rule, @badge.rules) %>
  </p>

  <p>
    <%= form.label :criterion, "Критерий" %><br>
    <%= form.text_field :criterion, id: :criterion %>
  </p>

  <p><%= form.submit %></p>
<% end %>
